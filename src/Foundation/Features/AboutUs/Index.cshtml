@using Foundation.Features.AboutUs

@model ContentViewModel<AboutUsPage>

<div class="row">
    <div class="col-md-12 col-lg-2">
        @Html.PropertyFor(x => x.CurrentContent.LeftContentArea)
    </div>

    <div class="col-md-12 col-lg-9">
        <div class="aboutus-page row no-gutters">
            @*<div class="col-12">
                    @Html.PropertyFor(x => x.CurrentContent.LeftContentArea)
                </div>*@
            @if ((Model.CurrentContent.MainBody != null && !Model.CurrentContent.MainBody.IsEmpty) || PageEditing.PageIsInEditMode)
            {
                <div class="col-12">
                    @Html.PropertyFor(m => m.CurrentContent.MainBody)
                </div>
            }
            <div class="col-12">
                @Html.PropertyFor(x => x.CurrentContent.MainContentArea)
            </div>
        </div>
    </div>
</div>
